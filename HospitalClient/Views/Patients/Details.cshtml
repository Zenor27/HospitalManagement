@model PatientDetailsModel
@{
    ViewData["Title"] = "Patients";
}

<!-- Title -->
<div class="row">
    <div class="col-12">
        <h2 class="font-weight-light">Patient</h2>
    </div>
</div>

<!-- Patient datas -->
<div class="row">
    <!-- Name -->
    <div class="col-6">
        <div class="card stat-card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <h5 class="card-title text-uppercase text-muted mb-0">Name</h5>
                        <p class="h2 font-weight-bold mb-0 text-capitalize">@Model.Patient.FullName</p>
                    </div>
                    <div class="col-auto">
                        <div class="icon-shape bg-gradient-violet text-white rounded-circle shadow">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Email -->
    <div class="col-6">
        <div class="card stat-card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <h5 class="card-title text-uppercase text-muted mb-0">Email</h5>
                        <p class="h2 font-weight-bold mb-0">@Model.Patient.Email</p>
                    </div>
                    <div class="col-auto">
                        <div class="icon-shape bg-gradient-turquoise text-white rounded-circle shadow">
                            <i class="fas fa-envelope"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<div class="row">
    <!-- Phone -->
    <div class="col-6">
        <div class="card stat-card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <h5 class="card-title text-uppercase text-muted mb-0">Phone</h5>
                        <p class="h2 font-weight-bold mb-0">@Model.Patient.PhoneNumber</p>
                    </div>
                    <div class="col-auto">
                        <div class="icon-shape bg-gradient-blue text-white rounded-circle shadow">
                            <i class="fas fa-phone"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Adress -->
    <div class="col-6">
        <div class="card stat-card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <h5 class="card-title text-uppercase text-muted mb-0">Address</h5>
                        <p class="h2 font-weight-bold mb-0">@Model.Patient.Address</p>
                    </div>
                    <div class="col-auto">
                        <div class="icon-shape bg-gradient-green text-white rounded-circle shadow">
                            <i class="fas fa-home"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<!-- Background -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header h4 font-weight-bold mb-0">
                Informations
            </div>
            <div class="card-body">
                <form asp-controller="Patients" asp-action="UpdatePatientBackground">
                    @Html.HiddenFor(model => model.Patient.Id)
                    <div class="row">
                        <div class="col-12">
                            <h5 class="card-title">Patient background</h5>
                            <textarea class="w-100 form-control" asp-for="Patient.Background">@Model.Patient.Background</textarea>
                        </div>
                        <button class="btn btn-primary mt-3" type="submit">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
