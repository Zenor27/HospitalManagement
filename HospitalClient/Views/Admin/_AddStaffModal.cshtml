@using HospitalEntities.Models
@model AddStaffViewModel
<!-- Add message modal -->
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" id="addStaffModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New staff</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Admin" asp-action="AddStaff">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="FirstName" class="col-form-label">First Name:</label>
                        <input asp-for="FirstName" class="form-control" />
                        <div><span asp-validation-for="FirstName"></span></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="col-form-label">Last Name:</label>
                        <input asp-for="LastName" class="form-control" />
                        <div><span asp-validation-for="LastName"></span></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="StaffType" class="col-form-label">Rôle:</label>
                        <select asp-for="StaffType" asp-items="Html.GetEnumSelectList<StaffType>()" class="form-control">
                            <option value=""></option>
                        </select>
                        <div><span asp-validation-for="StaffType"></span></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="col-form-label">Email:</label>
                        <input asp-for="Email" class="form-control" />
                        <div><span asp-validation-for="Email"></span></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="col-form-label">Address:</label>
                        <input asp-for="Address" class="form-control" />
                        <div><span asp-validation-for="Address"></span></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="col-form-label">PhoneNumber:</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <div><span asp-validation-for="PhoneNumber"></span></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="col-form-label">Password:</label>
                        <input asp-for="Password" class="form-control" />
                        <div><span asp-validation-for="Password"></span></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="col-form-label">Password Confirm:</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <div><span asp-validation-for="ConfirmPassword"></span></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>